# HydroX Frontend Environment Configuration
# Copy this file to .env and fill in the values

# API Gateway URL (Backend)
# Local development: http://localhost:8080
# Production: https://api.hydrox.io
NEXT_PUBLIC_API_URL=http://localhost:8080

# WebSocket URL (for real-time market data)
# Local development: ws://localhost:8080
# Production: wss://api.hydrox.io
NEXT_PUBLIC_WS_URL=ws://localhost:8080

# Blockfrost Settings (for Lucid/Cardano blockchain interaction)
# Get your API key from: https://blockfrost.io/
# Preview: https://cardano-preview.blockfrost.io/api/v0
# Mainnet: https://cardano-mainnet.blockfrost.io/api/v0
NEXT_PUBLIC_BLOCKFROST_URL=https://cardano-preview.blockfrost.io/api/v0
NEXT_PUBLIC_BLOCKFROST_API_KEY=your_blockfrost_api_key_here

# Cardano Network
# Options: Preview, Preprod, Mainnet
NEXT_PUBLIC_CARDANO_NETWORK=Preview
